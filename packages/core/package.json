{
  "name": "@mokr/core",
  "version": "1.3.0",
  "description": "Core moker functions",
  "repository": "https://github.com/hongaar/moker",
  "license": "MIT",
  "author": "joram@vandenboezem.nl",
  "type": "module",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "yarn clean && tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist && rm -rf types",
    "prepublish": "yarn build",
    "test": "NODE_OPTIONS='--loader=ts-node/esm --no-warnings' node--test test/*.test.ts | NODE_OPTIONS='--loader=ts-node/esm --no-warnings' tap --no-coverage"
  },
  "dependencies": {
    "chalk": "5.2.0",
    "deepmerge": "4.3.1",
    "hosted-git-info": "6.1.1",
    "license": "1.0.3",
    "ora": "6.3.1",
    "pkg-up": "^4.0.0",
    "sort-package-json": "2.4.1",
    "yaml": "2.3.1"
  },
  "devDependencies": {
    "@types/hosted-git-info": "3.0.2",
    "@types/node": "20.2.5",
    "tap": "16.3.4",
    "tempy": "3.0.0",
    "test": "3.3.0",
    "ts-node": "10.9.1",
    "typescript": "5.1.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "moker": {
    "plugins": [
      "typescript",
      "test"
    ]
  }
}
